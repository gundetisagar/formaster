{
    "swagger": "2.0",
    "host": "127.0.0.1:8080",
    "basePath": "/api/reporting_portal/",
    "info": {
        "version": "1.0.0",
        "title": "Simple API",
        "description": "A simple API to learn how to write OpenAPI Specification"
    },
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users"
            },
            "type": "oauth2"
        }
    },
    "security": [],
    "definitions": {
        "StatusEnum": {
            "type": "string",
            "enum": [
                "ACKNOWLEDGED_BY_RP",
                "ACTION_IN_PROGRESS",
                "RESOLVED",
                "CLOSED",
                "REPORTED"
            ]
        },
        "FilterEnum": {
            "type": "string",
            "enum": [
                "ACKNOWLEDGED_BY_RP",
                "ACTION_IN_PROGRESS",
                "RESOLVED",
                "CLOSED",
                "ALL",
                "REPORTED"
            ]
        },
        "SevertyEnum": {
            "type": "string",
            "enum": [
                "HIGH",
                "WARNING",
                "LOW"
            ]
        },
        "SortEnum": {
            "type": "string",
            "enum": [
                "ASE",
                "DESC"
            ]
        },
        "RpDetails": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32"
                },
                "name": {
                    "type": "string"
                },
                "phone_number": {
                    "type": "integer",
                    "format": "int64"
                },
                "profile_pic": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "name",
                "phone_number"
            ]
        },
        "Observation": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "category": {
                    "type": "integer",
                    "format": "int32"
                },
                "sub_category": {
                    "type": "integer",
                    "format": "int32"
                },
                "severty": {
                    "$ref": "#/definitions/SevertyEnum"
                },
                "description": {
                    "type": "string"
                },
                "attachments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "title",
                "severty",
                "description"
            ]
        },
        "UserObservervations": {
            "type": "object",
            "properties": {
                "observation_id": {
                    "type": "integer",
                    "format": "int32"
                },
                "title": {
                    "type": "string",
                },
                "reported_on": {
                    "type": "string"
                },
                "assigned_to": {
                    "$ref": "#/definitions/RpDetails"
                },
                "severty": {
                    "$ref": "#/definitions/SevertyEnum"
                },
                "status": {
                    "$ref": "#/definitions/StatusEnum"
                },
                "due_date": {
                    "type": "string",
                },
                "messages_count": {
                    "type": "integer",
                    "format": "int32"
                }
            },
            "required": [
                "title",
                "reported_on",
                "assigned_to",
                "severty",
                "status"
            ]
        },
        "UserObervationsBody": {
            "type": "object",
            "properties": {
                "filter_on_status": {
                    "$ref": "#/definitions/FilterEnum"
                },
                "sort_on_due_date": {
                    "$ref": "#/definitions/SortEnum"
                },
                "sort_on_reported_date": {
                    "$ref": "#/definitions/SortEnum"
                }
            }
        },
        "SubCategory": {
            "type": "object",
            "properties": {
                "sub_category_id": {
                    "type": "integer",
                    "format": "int32"
                },
                "sub_category": {
                    "type": "string"
                }
            },
            "required": [
                "sub_category_id",
                "sub_category"
            ]
        }
        "Category": {
            "type": "object",
            "properties": {
                "category_id": {
                    "type": "integer",
                    "format": "int32"
                },
                "category": {
                    "type": "string",
                },
                "sub_categories_list": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/SubCategory"
                    }
                }
            },
            "required": [
                "category_id",
                "category"
            ]
        }
    },
    "parameters": {
        "OffsetQueryParameter": {
            "name": "offset",
            "in": "query",
            "required": true,
            "description": "enter offset",
            "type": "integer",
            "format": "int64"
        },
        "LimitQueryParameter": {
            "name": "limit",
            "in": "query",
            "required": true,
            "description": "enter limit",
            "type": "integer",
            "format": "int64"
        },
        "UserObservationBodyParameter": {
            "name": "filter and sort options",
            "in": "body",
            "required": true,
            "description": "filter and sort options pass in body",
            "schema": {
                "$ref": "#/definitions/UserObervationsBody"
            }
        },
        "CreateObservationParameter": {
            "name": "create observation",
            "in": "body",
            "required": true,
            "description": "create observation",
            "schema": {
                "$ref": "#/definitions/Observation"
            }
        }
    },
    "responses": {
        "CreatedSuccessfully": {
            "description": "successfully created"
        },
        "UserObservationsResponse": {
            "description": "list of user observations",
            "schema": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/UserObservervations"
                }
            }
        },
        "CategoryResponse": {
            "description": "List of categories and thier sub-categories",
            "schema": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/Category"
                }
            }
        }
    },
    "paths": {
        "/create_observation/v1/": {
            "post": {
                "operationId": "create_observation",
                "summary": "create observation",
                "security": [{
                    "oauth": [
                        "write"
                    ]
                }],
                "parameters": [{
                    "$ref": "#/parameters/CreateObservationParameter"
                }],
                "responses": {
                    "201": {
                        "$ref": "#/responses/CreatedSuccessfully"
                    }
                }
            }
        },
        "/get/user/observations/v1/": {
            "get": {
                "operationId": "get_list_of_observations",
                "summary": "Get list of user observations",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "parameters": [{
                        "$ref": "#/parameters/OffsetQueryParameter"
                    },
                    {
                        "$ref": "#/parameters/LimitQueryParameter"
                    },
                    {
                        "$ref": "#/parameters/UserObservationBodyParameter"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/responses/UserObservationsResponse"
                    }
                }
            }
        },
        "/get/categories/v1/": {
            "get": {
                "operationId": "get_categories",
                "summary": "Get categories and their sub-categories",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/CategoryResponse"
                    }
                }
            }
        }
    }
}
