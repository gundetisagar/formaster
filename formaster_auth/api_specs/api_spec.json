{
    "swagger": "2.0",
    "host": "127.0.0.1:8080",
    "basePath": "/api/formaster_auth/",
    "info": {
        "version": "1.0.0",
        "title": "FORMASTER API",
        "description": "A simple API to learn how to write OpenAPI Specification"
    },
    "schemes": [
        "https",
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users",
                "admin": "admin",
                "user": "user"
            },
            "type": "oauth2"
        }
    },
    "paths": {
        "/login/v1/": {
            "post": {
                "operationId": "login",
                "summary": "Login",
                "parameters": [{
                    "$ref": "#/parameters/LoginParameter"
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/LoginResponse"
                    },
                    "401": {
                        "$ref": "#/responses/InvalidUsernameOrPasswordResponse"
                    }
                }
            }
        },
        "/get_profile/v1/": {
            "get": {
                "operationId": "get_profile",
                "summary": "User Details",
                "security": [{
                    "oauth": [
                        "read"
                    ]
                }],
                "responses": {
                    "200": {
                        "$ref": "#/responses/UserDetailsResponses"
                    }
                }
            }
        }
    },
    "parameters": {
        "LoginParameter": {
            "name": "login_form",
            "in": "body",
            "description": "Enter your login details",
            "required": true,
            "schema": {
                "$ref": "#/definitions/Login"
            }
        }
    },
    "responses": {
        "LoginResponse": {
            "description": "returns user_id, access_token, refresh_token",
            "schema": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "access_token": {
                        "type": "string"
                    },
                    "refresh_token": {
                        "type": "string"
                    },
                    "expires_in": {
                        "type": "integer",
                        "format": "int64"
                    }
                },
                "required": [
                    "user_id",
                    "access_token",
                    "refresh_token",
                    "expires_in"
                ]
            }
        },
        "InvalidUsernameOrPasswordResponse": {
            "description": "Given details invalid"
        },
        "UserDetailsResponses": {
            "description": "returns user details",
            "schema": {
                "$ref": "#/definitions/UserDetails"
            }
        }
    },
    "definitions": {
        "Login": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "username",
                "password"
            ]
        },
        "UserDetails": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                }
            },
            "required": [
                "username"
            ]
        }
    }
}
